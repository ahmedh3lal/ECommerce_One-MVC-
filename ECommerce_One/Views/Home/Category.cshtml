@model List<Product>
<div class="carousel-wrapper">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
            <div class="card">
                <img src="@item.ImageUrl" alt="@item.Name">
                <h5>Name: @item.Name</h5>
                <h5>Quantity: @item.Quentity</h5>
                <h5>Price: @item.Price</h5>
                <p>Description: @item.Description</p>
            </div>
        </a>
    }
</div>

<style>
    .carousel-wrapper {
        overflow: hidden;
        width: 100%; /* عرض الكاروسيل بالكامل */
        margin: 0 auto;
    }

    .carousel {
        display: flex;
        flex-wrap: wrap; /* يسمح بتغليف العناصر للانتقال لسطر جديد بعد عدد معين */
        justify-content: space-between;
    }

    .card {
        width: 15rem; /* عرض البطاقة */
        height: 35rem; /* ارتفاع البطاقة */
        margin: 10px; /* إضافة مسافة بين البطاقات */
        background-color: #1e1e1e;
        border-radius: 10px;
        padding: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        overflow: hidden;
    }

        .card img {
            width: 100%;
            height: 15rem; /* تحديد ارتفاع الصورة */
            object-fit: cover; /* ضبط الصورة لتناسب حجم البطاقة */
            border-radius: 10px;
        }

        .card h5, .card p {
            margin: 5px 0;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            font-size: 1.2rem; /* تكبير حجم النص */
        }

    .button-container {
        position: absolute;
        top: 50%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
    }

    .prev, .next {
        background-color: #444;
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 24px;
    }

        .prev:hover, .next:hover {
            background-color: #666;
        }
</style>
