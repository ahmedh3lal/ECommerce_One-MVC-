@model Users

@if (ViewData.ModelState["Cust"] != null)
{
    <div class="alert alert-danger">
        @ViewData.ModelState["Cust"].Errors[0].ErrorMessage
    </div>
}
<form method="post" align="center">
    <!-- Email input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <input type="email" asp-controller="User" asp-for="Email" id="form2Example1" class="form-control" />
        <label class="form-label" for="form2Example1">Email address</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Password input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <input type="password" asp-controller="User" asp-for="Password" id="form2Example2" class="form-control" />
        <label class="form-label" for="form2Example2">Password</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
        </div>

       
    </div>

    <!-- Submit button -->
    <input type="submit" value="LoGin" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4"></input>

    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a asp-action="Register">Register</a></p>
       
    </div>
</form>
<style>
   header
   {
       display:none;
   }
    /* Ensure that the body takes up the full viewport height and has no margins */
    body {
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: url('/Images/logo-img-1.jpg'); /* تعديل المسار إلى صورتك */
        background-size: cover; /* لجعل الصورة تغطي كامل الصفحة */
        background-position: center; /* لجعل الصورة تتمركز في منتصف الشاشة */
        background-repeat: no-repeat; /* لمنع تكرار الصورة */
    }


    /* Container to hold the form, can be used to add additional styling if needed */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    /* Style for the login form */
    .login-form {
        background: rgba(255, 255, 255, 0.9); /* Slightly transparent white background */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle shadow around the form */
        max-width: 400px; /* Limit the maximum width of the form */
        width: 100%; /* Full width up to the maximum width */
    }

    /* Style for form elements */
    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    button {
        width: 100%;
        padding: 10px;
        background-color: #007bff; /* Primary button color */
        border: none;
        border-radius: 4px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3; /* Darker shade on hover */
        }


</style>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
