@model User
</style>
<!-- Registration 8 - Bootstrap Brain Component -->
<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <form method="post" enctype="multipart/form-data">
                            <div class="col-12 col-md-6">
                                <input asp-for="formFile" type="file" onchange="loadfile(event)">
                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" id="output" asp-for="formFile" alt="Welcome back you've been missed!">

                            </div>
                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">

                                                    <h2 class="h4 text-center">Update Information</h2>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-controller="User" asp-for="Name" type="text" class="form-control" name="Name" value="@Model.Name" id="firstName" placeholder="UserName" required>
                                                    <label for="firstName" class="form-label">UserName</label>
                                                    <span asp-validation-for="Name" class="text-danger"></span>

                                                </div>
                                            </div>
                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="Number" type="text" class="form-control" name="number" id="number" value="@Model.Number" placeholder="Phone" required>
                                                        <label for="Number" class="form-label">Phone</label>
                                                        <span asp-validation-for="Number" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="@Model.Email" type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                                        <label for="email" class="form-label">Email</label>
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="@Model.Password" type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
                                                        <label for="password" class="form-label">Password</label>
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="User" asp-for="@Model.RePassword" type="password" class="form-control" name="RePassword" id="RePassword" value="" placeholder="RePassword" required>
                                                        <label for="RePassword" class="form-label">RePassword</label>
                                                        <span asp-validation-for="RePassword" class="text-danger"></span>
                                                    </div>
                                                </div>
                                               
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-dark btn-lg" type="submit">Save</button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts
{
    <script>
        var loadfile =function(event){
            var reader=new FileReader();
            reader.onload=function()
            {
                var output = document.getElementById('output');
                output.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>