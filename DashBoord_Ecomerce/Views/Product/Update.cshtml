@model Product

<!-- Registration 8 - Bootstrap Brain Component -->
<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <form method="post" enctype="multipart/form-data">
                            <div class="col-12 col-md-6">
                                <input asp-for="formFile" type="file" onchange="loadfile(event)">
                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" id="output" asp-for="formFile" alt="Welcome back you've been missed!">

                            </div>
                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">

                                                    <h2 class="h4 text-center">Update Information</h2>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row gy-3 overflow-hidden">
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-controller="Product" asp-for="Name" type="text" class="form-control" name="Name" value="@Model.Name" id="firstName" placeholder="UserName" required>
                                                    <label for="firstName" class="form-label">Product Name</label>
                                                    <span asp-validation-for="Name" class="text-danger"></span>

                                                </div>
                                            </div>
                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="Product" asp-for="Quentity" type="text" class="form-control" name="Quentity" id="Quentity" value="@Model.Quentity" placeholder="Quentity" required>
                                                        <label for="Quentity" class="form-label">Quentity</label>
                                                        <span asp-validation-for="Quentity" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="Product" asp-for="@Model.Price" type="Price" class="form-control" name="Price" id="Price" placeholder="Price" required>
                                                        <label for="Price" class="form-label">Price</label>
                                                        <span asp-validation-for="Price" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="Product" asp-for="@Model.Description" type="text" class="form-control" name="Description" id="Description" value="@Model.Description">
                                                        <label for="Description" class="form-label">Description</label>
                                                        <span asp-validation-for="Description" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input asp-controller="Product" asp-for="@Model.CategoryId" type="text" class="form-control" name="CategoryId" id="CategoryId" value="" placeholder="CategoryId">
                                                        <label for="CategoryId" class="form-label">CategoryId</label>
                                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn btn-dark btn-lg" type="submit">Save</button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts
{
    <script>
        var loadfile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('output');
                output.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>